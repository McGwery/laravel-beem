{
    "name": "bryceandy/laravel-beem",
    "description": "A package to integrate your Laravel with Beem API services such as: SMS, USSD, Airtime, Payment Collections, Payment Checkout, Disbursements, OTP and Contacts",
    "license": "MIT",
    "authors": [
        {
            "name": "bryceandy",
            "email": "hello@bryceandy.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.3"
    },
    "require-dev": {
        "orchestra/testbench": "^6.19"
    },
    "autoload": {
        "psr-4": {
            "Bryceandy\\Beem\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bryceandy\\Beem\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bryceandy\\Beem\\BeemBaseServiceProvider"
            ]
        }
    }
}
